<section class="account-register">

  <h1><%= title %></h1>

  <!-- Flash Messages -->
<div class="flash-messages">
  <%- messages() %>
</div>

  <form class="register-form" action="/account/register" method="post">

    <label for="account_firstname">First Name</label>
    <input
        type="text"
        name="account_firstname"
        id="accountFirstname"
        required
        value="<%= locals.account_firstname %>"
    >

    <label for="account_lastname">Last Name</label>
    <input
        type="text"
        name="account_lastname"
        id="accountLastname"
        required
        value="<%= locals.account_lastname %>"
    >

    <label for="account_email">Email Address</label>
    <input
        type="email"
        name="account_email"
        id="accountEmail"
        required
        value="<%= locals.account_email %>"
        placeholder="Enter a valid email"
    >

    <label for="account_password">Password</label>

    <input
        type="password"
        id="account_password"
        name="account_password"
        required
        pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$"
        title="Password must be at least 12 characters long and contain at least 1 uppercase letter, 1 lowercase letter, 1 number, and 1 special character.">

    <button type="submit">Register</button>
  </form>

</section>
