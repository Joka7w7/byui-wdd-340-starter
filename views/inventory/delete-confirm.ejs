<form
  class="inventory-form"
  action="/inv/delete"
  method="post"
>
  <label>Make</label>
  <input type="text" value="<%= inv_make %>" readonly>

  <label>Model</label>
  <input type="text" value="<%= inv_model %>" readonly>

