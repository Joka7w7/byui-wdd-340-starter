<h1><%= title %></h1>

<%- messages() %>

<form class="inventory-form" action="/inv/add-inventory" method="post">

  <label>Classification</label>
  <select name="classification_id" required>
    <option value="">Choose a classification</option>
    <% classifications.forEach(c => { %>
      <option value="<%= c.classification_id %>"
        <%= (typeof classification_id !== "undefined" && classification_id == c.classification_id) ? "selected" : "" %>>
        <%= c.classification_name %>
      </option>
    <% }) %>
  </select>

  <label>Make</label>
  <input type="text" name="inv_make" required
    value="<%= inv_make || '' %>">

  <label>Model</label>
  <input type="text" name="inv_model" required
    value="<%= inv_model || '' %>">

  <label>Year</label>
  <input type="text" name="inv_year" maxlength="4" required
    value="<%= inv_year || '' %>">

  <label>Description</label>
  <textarea name="inv_description" required><%= inv_description || '' %></textarea>

  <label>Image Path</label>
  <input type="text" name="inv_image" required
    value="<%= inv_image || '' %>">

  <label>Thumbnail Path</label>
  <input type="text" name="inv_thumbnail" required
    value="<%= inv_thumbnail || '' %>">

  <label>Price</label>
  <input type="number" step="0.01" name="inv_price" required
    value="<%= inv_price || '' %>">

  <label>Miles</label>
  <input type="number" name="inv_miles" required
    value="<%= inv_miles || '' %>">

  <label>Color</label>
  <input type="text" name="inv_color" required
    value="<%= inv_color || '' %>">

  <button type="submit">Add Inventory</button>
</form>
